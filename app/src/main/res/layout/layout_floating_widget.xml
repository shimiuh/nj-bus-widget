<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/mTopView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="23.9dp"
        android:padding="0dp"
        android:text="INTERSTATE"
        android:textSize="32dp"
        android:textColor="@color/red"
        android:background="@color/text_bg_color"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal|top"/>
<!--    android:letterSpacing="0.03"-->

    <FrameLayout
        android:id="@+id/mMidView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="195dp"
        android:padding="10dp"
        android:layout_marginStart="10dp"
        android:clickable="true"
        android:focusable="true"
        android:background="#FFFFFF">


        <LinearLayout
            android:layout_width="151dp"
            android:layout_height="141.5dp"
            android:orientation="vertical"
            android:background="@drawable/text_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingTop="1.2dp"
                android:paddingStart="5.7dp"
                android:text="One Way"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/mPassenger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:paddingTop="5.5dp"
                android:paddingStart="5.7dp"
                android:text="@string/passenger"
                android:textSize="22dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>
    </FrameLayout>


    <View
        android:id="@+id/mBottomView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="380dp"
        android:layout_marginStart="125dp"
        android:layout_marginEnd="125dp"
        android:background="@color/text_bg_color"/>

</FrameLayout>